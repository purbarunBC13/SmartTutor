@model SmartTutor.Models.User

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <title>Login Page</title>
</head>
<body>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="card p-4 shadow-lg" style="width: 22rem;">
            <h3 class="text-center mb-4">Login</h3>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Username Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-danger text-center mb-2">@ViewBag.Message</div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Login</button>

                <!-- Forgot Password Link -->
                <div class="text-center mt-3">
                    <a href="#">Forgot your password?</a>
                </div>

                <!-- Sign Up Link -->
                <div class="text-center mt-2">
                    <p>Don't have an account? <a asp-action="Create">Sign up</a></p>
                </div>

                <!-- Error Message -->
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
