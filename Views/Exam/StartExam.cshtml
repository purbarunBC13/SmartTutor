@model SmartTutor.Models.Exam

@{
    ViewData["Title"] = "StartExam";
}

@if (Model == null)
{
    <p>Exam details could not be loaded. Please try again.</p>
}
else
{
    <h1>StartExam</h1>

    <div>
        <h4>Exam</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration)
            </dd>
        </dl>
        <button class="btn-danger">
            <a asp-action="TakeExam" asp-route-examId="@Model.ExamId" class="text-decoration-none text-white p-2">Start Now</a>
        </button>

    </div>
}
